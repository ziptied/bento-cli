  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bentonow/bento-cli.git"
  },
  "homepage": "https://github.com/bentonow/bento-cli#readme",
