{
  "name": "@bentonow/bento-cli",
  "version": "0.1.0",
  "description": "Command-line interface for Bento email marketing. Manage subscribers, tags, events, and broadcasts from your terminal.",
  "type": "module",
  "bin": {
    "bento": "./bin/bento"
  },
  "files": [
    "bin",
    "dist",
    "skill",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
